<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file %></a>
      <a href="/<%= file %>/edit">Edit</a>
      <form class="delete" action="/<%= file %>/delete" method="post">
        <input type="submit" value="Delete" name="file_name">
      </form>
    </li>
  <% end %>
</ul>

<p><a href="/new">New Document</a></p>

<% if session[:username] %>
  <p class="user-status">Signed in as <%= session[:username] %></p>
  <form action="/users/signout" method="post">
    <input type="submit" value="Sign Out">
  </form>
<% else %>
  <a href="/users/signin">
    <input type="button" value="Sign In">
  </a>
<% end %>
